%section.main-content
  %h1.main= "Create an account"
  %div.fb
    %p= "Or login with "
    = image_tag("content/fb-login.png")
  %form
    %fieldset
      %legend= "Personal Information"
      %div.left-column
        %div.field
          %label= "Full Name"
          %input
        %div.field
          %label= "Password"
          %input
      %div.right-column
        %div.field
          %label= "Email"
          %input
        %div.field
          %label= "Password confirm"
          %input
    %fieldset
      %legend= "Billing Information"
      %div.left-column
        %div.field
          %label= "Cardholder Name"
          %input
        %div.field
          %label= "Card Number"
          %input
        %div.field
          %label= "Security Code"
          %input
        %div.field
          %label= "Expiration Date"
          %input
      %div.right-column
        %div.field
          %label= "Billing Address"
          %input
        %div.field
          %label= "City"
          %input
        %div.field
          %label= "State/Province"
          %input
        %div.field
          %label= "Postal Code"
          %input
      %div.field.terms
        %input{ :type => "checkbox" }
          %label
            = "I agree to the"
            = link_to("Terms and Conditions", "#")
            = "and"
            = link_to("Privacy Statement", "#")
    %input{ :type => "Submit", :value => "Create an account", :class => "btn"}

%section.right-sidebar
  %h1.main= "Payment FAQ"
  %ul
    %li
      %h2= link_to("What happens after I buy?", "#", :rel => "answer-1", :class => "drill-down")
      %div#answer-1.hidden= "Lorem ipsum dolor sit amet consecteur adipliscing elit"
    %li
      %h2= link_to("What if I buy as a gift", "#", :rel => "answer-2", :class => "drill-down")
      %div#answer-2.hidden= "Lorem ipsum dolor sit amet consecteur adipliscing elit"
    %li
      %h2= link_to("Can I change or cancel my purchase?", "#", :rel => "answer-3", :class => "drill-down question-3")
      %div#answer-3.hidden= "Lorem ipsum dolor sit amet consecteur adipliscing elit" 
    %li
      %h2= link_to("Is this safe?", "#", :rel => "answer-4", :class => "drill-down question-4")
      %div#answer-4.hidden
        %p= "Nothing is more important to us than treating our customers well."
        %p= "If you ever feel like Billably let you down, give us a call and we'll return your purchase - simple as that."
  = image_tag("content/security.png")
