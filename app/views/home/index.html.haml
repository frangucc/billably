%section.main-content
  = image_tag('content/bread.png', :alt => "Product name", :class => "main-img")
  = link_to("Merchant Details", "#", :class => "hidden")

  = image_tag('content/user.png', :alt => "Username", :class => "user-img")

  %div.merchant-info
    = image_tag('content/logo.png', :alt => "D'Amato Bakery")

    %h1
      = link_to("D'Amato's Bakery")
      = " - Chicago, Illinois"
    %ul
      %li= "923 Members"
      %li.last= "392 Reviews"

  %section.quick-subscription
    %h1.secondary-heading= "Quick Subscription Information"
    %div#tabs
      %ul
        %li= link_to("General Info", "#general-info", :class => "active")
        %li= link_to("Shipping Info", "#shipping-info")
        %li= link_to("Details", "details")
      %div#general-info
        %p= "Chicago's premier fresh sustainably sourced fresh fish and seafood market. We specialize in cutting sushi quality fresh globally sourced fish every day. Fish, seafood, home made gourmet foods to go."
        %section
          %h1= "Fish options include"
          %ul.bullets
            %li= "Atlantic Salmon"
            %li= "Ahi Tuna"
            %li= "Chilean Seabass"
            %li= "Porgies"
          %p= link_to("See configuration options", "#")
        %section
          %h1= "D'Amato's video"
          %a{:href => "http://vimeo.com/8245346", :rel => "prettyPhoto", :title => "How Billably Works"}
            = image_tag('content/damatos-video.png', :alt => "D'Amato's Video")
      %div#shipping-info.hidden
      %div#details.hidden

%section.right-sidebar
  %section
    %h1.hidden= "Delivery options"
    %form
      %fieldset
        %legend= "Fresh Bread Delivered"
        %input{:type => "radio", :name => "frequency", :value => "1", :class => "option"}
        %input{:type => "radio", :name => "frequency", :value => "3", :class => "option"}
        %input{:type => "radio", :name => "frequency", :value => "6", :class => "option"}
        %input{:type => "radio", :name => "frequency", :value => "9", :class => "option"}
      %fieldset
        %legend= "Monthly"
        %input{:type => "checkbox", :value => "on", :class => "switch"}
          %p.message
            = "Get fresh bread delivered from"
            = link_to("D'Amatos Bakery", "#")
            = "weekly or monthly for $29.00 & up."
            = link_to("Learn More", "#")
  %section.location
    %h1.hidden= "Location"
    = image_tag('content/map.png')
    %p
      = link_to("D'Amatos Bakery")
      = ", Chicago, Illinois"

  %section.how-it-works
    %h1.secondary-heading= "How Billably Works"
    %a{:href => "http://vimeo.com/8245346", :rel => "prettyPhoto", :title => "How Billably Works"}
      = image_tag('content/video.png', :alt => "How Billably Works")

