= simple_form_for([:admin, resource],
            :url => resource.new_record? ? collection_url : resource_url(resource),
            :html => {:multipart => true, :method => (resource.new_record? ? "post" : "put") }) do |f|
  - if resource.errors.any?
    %tr
      %td{:colspan => "2"}
        %h2
          = pluralize(resource.errors.count, "error")
          prohibited this testa from being saved:
        %ul
          - resource.errors.full_messages.each do |msg|
            %li= msg
  = f.input :delivery_date
  = f.input :name
  = f.association :subscription
  = f.input :our_cost
  = f.input :customer_cost
  = f.input :frequency
  = f.input :description
  %div.input= f.button :submit, :class => "btn"
